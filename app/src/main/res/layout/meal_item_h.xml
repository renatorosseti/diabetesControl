<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="6dp"
    cardview:cardElevation="0.6dp"
    cardview:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/mealView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lighter_gray"
            android:alwaysDrawnWithCache="true"
            android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_weight="0.22"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.6">

                    <TextView
                        android:id="@+id/mealType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <TextView
                        style="@style/InfoFont"
                        android:text="@string/glycemia_before" />

                    <TextView
                        android:id="@+id/preGlycemiaText"
                        style="@style/TagFont.H"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.8">

                    <TextView
                        style="@style/InfoFont"
                        android:text="@string/dosage" />

                    <TextView
                        android:id="@+id/dosageText"
                        style="@style/TagFont.H" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        style="@style/InfoFont"
                        android:id="@+id/afterward"
                        android:text="@string/glycemia_afterwards" />

                    <TextView
                        android:id="@+id/posGlycemiaText"
                        android:layout_below="@+id/afterward"
                        style="@style/TagFont.H" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>