<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="0.6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/mealCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageViewCaptured"
                android:layout_width="0dp"
                app:cardCornerRadius="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alwaysDrawnWithCache="true"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/mealType"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SpinnerMeal"
                        android:hint="@string/meal"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/SpinnerMeal"
                            android:id="@+id/spinnerMealType"
                            android:layout_marginTop="6dp"
                            android:textSize="12sp"
                            android:hint="________"
                            android:textColor="@color/colorBlack" />

                        <ImageView
                            style="@style/ArrowImage"
                            android:layout_alignBottom="@+id/spinnerMealType"
                            android:src="@android:drawable/arrow_down_float"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/mealGlycemia"
                    android:layout_weight="1.2"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        style="@style/SpinnerMeal"
                        android:hint="@string/glycemia_before"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/SpinnerMeal"
                            android:id="@+id/spinnerGlycemia"
                            android:layout_marginTop="6dp"
                            android:textSize="12sp"
                            android:hint="________"
                            android:textColor="@color/colorBlack" />

                        <ImageView
                            style="@style/ArrowImage"
                            android:layout_alignBottom="@+id/spinnerGlycemia"/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginTop="10dp"
                    android:id="@+id/mealDosage"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SpinnerMeal"
                        android:hint="@string/dosage"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/SpinnerMeal"
                            android:id="@+id/spinnerDosage"
                            android:layout_marginTop="6dp"
                            android:textSize="12sp"
                            android:hint="________"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content" />

                        <ImageView
                            style="@style/ArrowImage"
                            android:layout_alignBottom="@+id/spinnerDosage"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>