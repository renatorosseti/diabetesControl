<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="0.6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/mealCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageViewCaptured"
                android:layout_width="0dp"
                app:cardCornerRadius="6dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alwaysDrawnWithCache="true"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8">
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        style="@style/SpinnerMeal"
                        android:id="@+id/spinnerMealType"
                        android:hint="@string/meal"
                        app:met_floatingLabel="normal"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        style="@style/SpinnerMeal"
                        android:id="@+id/spinnerGlycemia"
                        android:hint="@string/glycemia_before"
                        app:met_floatingLabel="normal"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8">

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        style="@style/SpinnerMeal"
                        android:id="@+id/spinnerDosage"
                        android:hint="@string/dosage"
                        app:met_floatingLabel="normal"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>